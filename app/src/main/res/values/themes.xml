<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Moluccus" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">#00000000</item>
        <item name="md_corner_radius">16dp</item>
    </style>

    <style name="Theme.Moluccus" parent="Base.Theme.Moluccus" />
    <style name="Theme.FullScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge"/>

    <style name="dialog" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:windowEnterAnimation">@anim/bottom_up</item>
        <item name="android:windowExitAnimation">@anim/bottom_down</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">?android:windowBackground</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

</resources>